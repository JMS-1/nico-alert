{
    "compileOnSave": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "target": "ES2017"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}